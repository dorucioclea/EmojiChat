{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types", "./node_modules/typescript/lib",
      "./typings"
    ],
    "alwaysStrict": true,
    "emitDecoratorMetadata": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "target": "es2016",
    "sourceMap": true,
    "outDir": "./compiled",
    "lib": [
      "es2015.promise",
      "dom",
      "es6",
      "scripthost",
      "es7",
      "es2017.object",
      "es2015.proxy"
    ],
    "baseUrl": ".",
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"],
      "postcss": ["./typings/index.d.ts"],
      "magic-string": ["./typings/index.d.ts"]
    }
  }
}